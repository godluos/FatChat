<table class="table table-bordered">
<% @users.each do |user| %>
<tr>
    <td>
      <%= user.email %>
    </td>
    <td>
      <% if current_user.friend.is_friend?(user) %>
          <%= link_to("Quit", quit_user_path(user), method: :post, class: "btn btn-default") %>
    <% else %>    
          <%= link_to("Join", join_user_path(user), method: :post, class: "btn btn-default") %>
    <% end %>
    </td>
  </tr>


<% end %>
</table>
